#!/usr/bin/env bash

if [[ ! $# -eq 0 ]]; then
    echo "Usage: $0"
    exit 1
fi

echo -e "\e[34mUpdating dependencies...\e[0m"
bin/composer update --prefer-dist --quiet && composer update --prefer-dist --quiet
[[ $? -ne 0 ]] && exit 1

echo -e "\e[34mCode Style / Static Analysis\e[0m"
bin/cs && bin/sa
[[ $? -ne 0 ]] && exit 1

echo -e "\e[34mUnit Tests\e[0m"
bin/phpunit
[[ $? -ne 0 ]] && exit 1
